import pygame
import sys
import random

# Initialize Pygame
pygame.init()

# Constants
WIDTH, HEIGHT = 800, 600
FPS = 60

# Colors
WHITE = (255, 255, 255)
RED = (255, 0, 0)

# Create the game window
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Dragon Chase Game")

# Load images
dragon_img = pygame.image.load("dragon.png")  # Replace with your dragon image
victim_img = pygame.image.load("victim.png")  # Replace with your victim image

# Scale images
dragon_img = pygame.transform.scale(dragon_img, (50, 50))
victim_img = pygame.transform.scale(victim_img, (50, 50))

# Set up game variables
dragon_x = WIDTH // 2
dragon_y = HEIGHT - 100
victim_x = WIDTH // 2
victim_y = 50
victim_speed = 5

clock = pygame.time.Clock()

# Game loop
while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()

    # Move the victim with arrow keys
    keys = pygame.key.get_pressed()
    victim_x += (keys[pygame.K_RIGHT] - keys[pygame.K_LEFT]) * victim_speed

    # Ensure the victim stays within the window
    victim_x = max(0, min(WIDTH - 50, victim_x))

    # Dragon follows the victim
    if dragon_x < victim_x:
        dragon_x += 2
    elif dragon_x > victim_x:
        dragon_x -= 2

    # Check for collision
    if (
        dragon_x < victim_x + 50
        and dragon_x + 50 > victim_x
        and dragon_y < victim_y + 50
        and dragon_y + 50 > victim_y
    ):
        print("Game Over!")
        pygame.quit()
        sys.exit()

    # Clear the screen
    screen.fill(WHITE)

    # Draw dragon and victim
    screen.blit(dragon_img, (dragon_x, dragon_y))
    screen.blit(victim_img, (victim_x, victim_y))

    # Update the display
    pygame.display.flip()

    # Cap the frame rate
    clock.tick(FPS)
